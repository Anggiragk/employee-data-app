<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

<div class="container-fluid p-5">
    <h1>
        <i class="bi bi-file-earmark-person"></i>
        Aplikasi data pribadi
    </h1>
    
    <div class="row mt-2 search-form">
        <form action="/search" method="get" class="w-50">
            <div class="mb-3">
                <label for="nik" class="form-label">Nik</label>
                <input type="text" class="form-control" id="nik" name="nik" value="{{ nik }}">
            </div>
            <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text-area" class="form-control" id="nama" name="nama" value="{{ nama }}">
            </div>

            <button type="submit" class="btn btn-primary mb-3">search</button>
        </form>
    </div>

    <a href="/add" class="btn btn-primary mt-2">Add</a>
    <div class="row table-employee">
        <table class="css-serial">
            <thead>
            <tr class="text-center">
                <th>No</th>
                <th>NIK</th>
                <th>Nama Lengkap</th>
                <th>Umur</th>
                <th>Tanggal Lahir</th>
                <th>Jenis Kelamin</th>
                <th>Alamat</th>
                <th>Negara</th>
                <th>action</th>
            </tr>
            </thead>
            <tbody>
            {{#employees}}
                <tr>
                    <td scope="row"></td>
                    <td>{{nik}}</td>
                    <td>{{namaLengkap}}</td>
                    <td>{{ umur }}</td>
                    <td>{{tanggalLahir}}</td>
                    <td>{{jenisKelamin}}</td>
                    <td>{{alamat}}</td>
                    <td>{{negara}}</td>
                    <td>
                        <a href="/detail/{{ nik }}"><span class="badge rounded-pill text-bg-warning">Detail</span></a>
                        <a href="/edit/{{ nik }}"><span class="badge rounded-pill text-bg-success">Edit</span></a>
                        <form action="/delete/{{ nik }}" method="post">
                            <button type="submit" class="badge rounded-pill text-bg-danger border-0" onclick="confirm('Anda yakin ingin menghapus {{ namaLengkap }}')"><span>Delete</span></button>
                        </form>
                    </td>
                </tr>
            {{/employees}}
            </tbody>
        </table>
    </div>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>